<body>

<%- include('../partials/barraMenu.ejs'); %>

<main class="container fondo-gris p-5 mt-3">
    <div class="row">
        <div class="col"></div>
        <div class="col-10 col-md-8">
            <h1 class="mt-3 mb-3 text-primary">Ingrese Producto</h1>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="price">
                </div>
                <div class="mb-3">
                    <label for="url" class="form-label">Foto URL</label>
                    <input type="text" class="form-control" id="url">
