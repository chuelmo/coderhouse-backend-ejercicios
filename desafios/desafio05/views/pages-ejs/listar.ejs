<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Listado de Productos'}); %>
</head>

<body>

<%- include('../partials/barraMenu.ejs'); %>

<main class="container-fluid">
    <div class="row">
        <div class="col"></div>
        <div class="col-10">
            <h1 class="mt-3 mb-3 text-primary">Listado de Productos</h1>
        </div>
        <div class="col"></div>
    </div>
    <% if (hayProductos) { %>
    <div class="row">
        <div class="col"></div>
        <div class="col-10">
            <table class="table bg-dark">
                <tr>
                    <th class="text-warning">Nombre</th>
                    <th class="text-warning">Precio</th>
                    <th class="text-warning">Imagen</th>
                </tr>
                <% productos.forEach(function(p) { %>
                    <tr>
                        <td class="text-white"><%= p.title %></td>
                        <td class="text-white"><%= p.price %></td>
                        <td class="text-white"><img src=<%= p.thumbnail %> alt="imagen" height="64"></td>
                    </tr>
                <% }); %>
            </table>
        </div>
        <div class="col"></div>
    </div>
    <%} else { %>
    <div class="row">
        <div class="col"></div>
        <div class="col-10">
            <p class="mt-3 mb-3 p-3 aviso">No se encontraron productos</p>
        </div>
        <div class="col"></div>
    </div>
    <% } %>
</main>

<%- include('../partials/piePagina.ejs'); %>

</body>

</html>