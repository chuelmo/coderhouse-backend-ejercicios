extends layouts/layout.pug

block cabecera
    include partials/head.pug

block contenido
    include partials/barraMenu.pug
    main(class='container-fluid')
        div(class='row')
            div(class='col')
            div(class='col-10')
                h1(class='mt-3 mb-3 text-primary') Listado de Productos
            div(class='col')
        if (hayProductos)
            div(class='row')
                div(class='col')
                div(class='col-10')
                    table(class='table bg-dark')
                        tr
                            th(class='text-warning') Nombre
                            th(class='text-warning') Precio
                            th(class='text-warning') Imagen
                        each p in productos
                            tr
                                td(class='text-white')= p.title
                                td(class='text-white')= p.price
                                td(class='text-white')
                                    img(src=p.thumbnail alt='imagen' height='64')
                div(class='col')
        else
            div(class='row')
                div(class='col')
                div(class='col-10')
                    p(class='mt-3 mb-3 p-3 aviso') No se encontraron productos
                div(class='col')

block pie
    include partials/piePagina.pug