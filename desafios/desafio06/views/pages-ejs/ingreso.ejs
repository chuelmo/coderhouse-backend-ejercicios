<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: 'Ingreso de productos'}); %>
</head>

<body>

<%- include('../partials/barraMenu.ejs'); %>

<main>
    <div class="container fondo-gris p-5 mt-3 rounded">
        <h2 class="mt-3 mb-3 text-primary">Ingrese Producto</h2>
        <form>
            <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="name">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Precio</label>
                <input type="number" class="form-control" id="price">
            </div>
            <div class="mb-3">
                <label for="url" class="form-label">Foto URL</label>
                <input type="text" class="form-control" id="url">
            </div>
        </form>
        <button class="btn btn-primary" id="enviar">Enviar</button>
        <h2 class="text-danger mt-3 mb-1">Productos</h2>
        <div id="productos">
            <% if (hayProductos) { %>
                <table class="table bg-dark">
                    <tr>
                        <th class="text-warning">Nombre</th>
                        <th class="text-warning">Precio</th>
                        <th class="text-warning">Imagen</th>
                    </tr>
                    <% productos.forEach(function(p) { %>
                        <tr>
                            <td class="text-white"><%= p.title %></td>
                            <td class="text-white"><%= p.price %></td>
                            <td class="text-white"><img src=<%= p.thumbnail %> alt="imagen" height="64"></td>
                        </tr>
                    <% }); %>
                </table>
            <%} else { %>
                <p class="mt-3 mb-3 p-3 aviso">No se encontraron productos</p>
            <% } %>
        </div>
    </div>
    <div class="container fondo-gris p-5 mt-3 mb-5 rounded">
        <h2 class="mt-3 mb-3 text-primary">Centro de Mensajes</h2>
        <div class="mb-3">
            <input type="text" class="form-control" id="email" placeholder="correo@gmail.com">
        </div>
        <div class="mb-3" id="chat">
            <% if (hayMensajes) { %>
                <p>
                <% mensajes.forEach(function(m) { %>
                        <span class="text-primary"><%= m.email %></span>
                        <span class="text-danger"><%= m.fecha %></span>
                        <span class="text-success"><%= m.mensaje %></span><br>
                <% }); %>
                </p>
            <% } %>
        </div>
        <div class="mb-3">
            <input type="text" class="form-control" id="mensaje" placeholder="IngresÃ¡ un mensaje...">
        </div>
        <button class="btn btn-primary" id="enviarMsg">Enviar</button>
    </div>
</main>

<%- include('../partials/piePagina.ejs'); %>

</body>

</html>